# ===========================================
# MinIO / S3 Configuration
# ===========================================
# Credentials для доступа к MinIO (S3-совместимое хранилище артефактов)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://minio:9000

# ===========================================
# Kafka Configuration
# ===========================================
# Bootstrap servers для подключения к Kafka брокеру
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# Kafka credentials (если требуется аутентификация)
KAFKA_USERNAME=
KAFKA_PASSWORD=

# Kafka топики
KAFKA_TOPIC=transactions
OUTPUT_TOPIC=fraud_predictions

# ===========================================
# Airflow Configuration
# ===========================================
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# ===========================================
# MLflow Configuration
# ===========================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000
MLFLOW_BACKEND_STORE_URI=postgresql://airflow:airflow@postgres/mlflow
